.page {
  display: flex;
  min-height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}

.container{
	padding:12px 12px;
  width: 100%;
  height: 100%;
}

.radio-group {
  border-radius: 25px;
  align-items: center;
  width: 100%;
}

.section panel{
  border-radius: 25px;
  display: block;
  width: 750rpx;
  flex: 1;
  margin-bottom: 12px;
  border-bottom: 1px solid #eee;
}

.section_title{
	font-size: 28px;
	color:#fff;
} 

.section_text{
	font-size: 16px;
	color:#333;
}


.button-style{ 
    vertical-align: middle;
    text-align: center;
    border-radius: 8rpx;  
    margin: 20rpx;  
    height: 22px;
    padding: 0 20px 0 20px;
    width: 70%;
    background-color: #4B4B4B;
} 