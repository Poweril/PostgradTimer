swiper{
  width: 100%;
  height: 180px;
}

image{
  width: 100%;
  height: 180px;
}

.posts-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 4px;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-left: 3px;  
  padding-right: 3px;
}

.posts-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.posts-author-date image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.posts-author-date text{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 16px;
}

.posts-title{
  font-size: 28px;
  font-weight: 600;
  color: #333;
  margin-left: 5px;
  margin-bottom: 5px;
}

.posts-image{
  height: 180px;
  margin-bottom: 5px;
}

.posts-content{
  font-size: 20px;
  color: #666666;
  line-height: 18px;
  margin-bottom: 5px;
}

.posts-like{
  font-size: 16px;
  flex-direction: row;
  line-height: 20px;
  margin-bottom: 5px;
}

.posts-like image{
  height: 16px;
  width: 16px;
  margin-left: 10px;
  vertical-align: middle;
}

.posts-like text{
  vertical-align: middle;
  margin-left: 5px;
  margin-right: 5px;
}